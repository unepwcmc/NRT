{{!< main}}

{{#contentFor 'header'}}
  <link rel="stylesheet" href="/css/dashboard.css">
{{/contentFor}}


<div class="content">

  <header>
    <h1>{{{t "dashboard/title"}}}</h1>
    <a href="/reports/new" class="button">
      <i class="icon-file-text-alt"></i> {{{t "header/new_report"}}}
    </a>
  </header>

  <div class="row">
    <div class="content-left column">
      <div class="content-title">
        <h2><i class="icon-file-text-alt"></i>{{{t "dashboard/latest_edited_reports"}}}</h2>
        <div class="period-of-time">
          <div class="last-update"><p><i class="icon-time"></i>Today</p></div>

          {{#each reports}}
            <section class="report-indicator-list">
              <div class="section-title">
                <small>
                  <i class="icon-time append"></i>Last updated on {{updatedAt}} by Dr. Anybody
                </small>
                <h3><a href="/reports/{{id}}">{{ title }}</a></h3>
                <h4>{{period}} | <i class="icon-bookmark"></i> Bookmark this report</h4>
                <p>{{brief}}</p>
              </div>
            </section>
          {{/each}}

        </div>
      </div>
    </div>

    <div class="content-right column">
      <div class="content-title">
        <h2><i class="icon-bar-chart"></i>{{{t "dashboard/latest_edited_indicators"}}}</h2>

        <div class="period-of-time">
          <div class="last-update"><p><i class="icon-time"></i>Today</p></div>
          {{#each indicators}}
          <section class="indicators report-indicator-list">
            <div class="section-title">
              <small>
                <i class="icon-time append"></i>Last updated on {{updatedAt}} by Dr. Anybody
              </small>
              <div class="clear"></div>
              <span class="indicator-value">
                {{currentValue}}<br>
                <small>{{indicatorDefinition.unit}}</small>
              </span>
              <span class="indicator-info">
                <h3><a href="/indicators/{{id}}">Narrative for {{title}}</a></h3>
                <h4><span class="bold"><a href="/indicators/{{id}}">{{title}}</a></span>| <i class="icon-bookmark"></i> Watch this indicator</h4>
                <p>This is the description for the <span style="font-style: italic;">{{title}}</span> indicator.</p>
                <p class="report-link">Published in <a href="#">Report</a></p>
              </span>
            </div>
          </section>
          {{/each}}
        </div>
      </div>
    </div>
    <div class="clear"></div>
  </div>
</div>
