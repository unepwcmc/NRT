  <div class="indicators-container">
    <div class="report-content">
      {{#themes}}
      <a href="/themes/{{_id}}">
        <h2>{{title}} <span>›</span></h2>
      </a>
        {{#unless indicators}}
        <a class="indicator-box" href="/indicators/{{id}}" data-title="Emissions of Greenhouse Gases" data-description="Anthropogenic emissions, less removal by sinks, of the greenhouse gases carbon dioxide (CO2), methane">
          <div class="box-header">
            <div class="title"><h3><span>NO<sub>2</sub> concentrations<!--{{title}}--></span></h3></div>
          </div>
          <div class="context-text good">Good <!-- {{context}} --></div>
          <div class="parameter">
            <h4><!--{{parameter}}-->38</h4>
            <div class="unit">μg/L</div>
          </div>
          <div class="last-update">Updated: 2 days ago <!-- {{last-update}} --></div>
        </a>
        <a class="indicator-box" href="/indicators/{{id}}" data-title="Abu Dhabi Red List Indices For All Species Groups" data-description="Anthropogenic emissions, less removal by sinks, of the greenhouse gases carbon dioxide (CO2), methane">
          <div class="box-header">
            <div class="title"><h3><span>SO<sub>2</sub> concentrations<!--{{title}}--></span></h3></div>
          </div>
          <div class="context-text concerning">Concerning <!-- {{context}} --></div>
          <div class="parameter">
            <h4><!--{{parameter}}-->42</h4>
            <div class="unit">mg/L</div>
          </div>
          <div class="last-update">Updated: 2 days ago <!-- {{last-update}} --></div>
        </a>
        <a class="indicator-box" href="/indicators/{{id}}" data-title="Ambient Concentration of Air Pollutants in Urban Areas" data-description="Ambient air pollution concentrations of ozone, particulate matter (PM10, and PM2,5, if those are not">
          <div class="box-header">
            <div class="title"><h3><span>PM10 concentrations<!--{{title}}--></span></h3></div>
          </div>
          <div class="context-text bad">Bad <!-- {{context}} --></div>
          <div class="parameter">
            <h4><!--{{parameter}}-->26</h4>
            <div class="unit">MPN/100ml</div>
          </div>
          <div class="last-update">Updated: 2 days ago <!-- {{last-update}} --></div>
        </a>
        <a class="indicator-box" href="/indicators/{{id}}" data-title="Protected Area as a Percent of Total area" data-description="This indicator measures the area of protected land ecosystems, inland water ecosystems, and marine">
          <div class="box-header">
            <div class="title"><h3><span>PM2.5 concentrations<!--{{title}}--></span></h3></div>
          </div>
          <div class="context-text excellent">Excellent <!-- {{context}} --></div>
          <div class="parameter">
            <h4><!--{{parameter}}-->26</h4>
            <div class="unit">ktonnes</div>
          </div>
          <div class="last-update">Updated: 2 days ago <!-- {{last-update}} --></div>
        </a>
        <a class="indicator-box" href="/indicators/{{id}}" data-title="Percentage of Threatened Species" data-description="Number of species at risk of extinction in proportion to the total number of native species">
          <div class="box-header">
            <div class="title"><h3><span>SO concentrations<!--{{title}}--></span></h3></div>
          </div>
          <div class="context-text catastrofic">Catastrofic <!-- {{context}} --></div>
          <div class="parameter">
            <h4><!--{{parameter}}-->41</h4>
            <div class="unit">μg/L</div>
          </div>
          <div class="last-update">Updated: 2 days ago <!-- {{last-update}} --></div>
        </a>
        <a class="indicator-box" href="/indicators/{{id}}" data-title="Annual Fish Catch" data-description="Annual catch of major species in relation to spawning biomass if available or in relation">
          <div class="box-header">
            <div class="title"><h3><span>O3 Human Health Ozone<!--{{title}}--></span></h3></div>
          </div>
          <div class="context-text concerning">Concerning <!-- {{context}} --></div>
          <div class="parameter">
            <h4><!--{{parameter}}-->53</h4>
            <div class="unit">mg/L</div>
          </div>
          <div class="last-update">Updated: 2 days ago <!-- {{last-update}} --></div>
        </a>
        <h3>
          No indicators
        </h3>
        {{/unless}}
        {{#indicators}}
        <a class="indicator-box" href="/indicators/{{id}}" data-title="Annual Fish Catch" data-description="Annual catch of major species in relation to spawning biomass if available or in relation"><!--{{long-title}} and {{brief-description}}-->
          <div class="box-header">
            <div class="title"><h3><span>O3 Human Health Ozone<!--{{title}}--></span></h3></div>
          </div>
          <div class="context-text concerning">Concerning <!-- {{context}} --></div>
          <div class="parameter">
            <h4><!--{{parameter}}-->53</h4>
            <div class="unit">mg/L</div>
          </div>
          <div class="last-update">Updated: 2 days ago <!-- {{last-update}} --></div>
        </a>
        {{/indicators}}
      {{/themes}}
    </div>
