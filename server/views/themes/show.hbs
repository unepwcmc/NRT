{{!< main}}

{{#contentFor 'header'}}
  <link rel="stylesheet" href="/css/theme.css">
  <link rel="stylesheet" href="/css/medium-editor.css">
  <link rel="stylesheet" href="/css/dashboard.css">

  <script src="/js/lib/d3.min.js"></script>
  <script src="/js/lib/underscore-min.js"></script>
  <script src="/js/lib/backbone-min.js"></script>
  <script src="/js/lib/backbone-relational.js"></script>
  <script src="/js/lib/handlebars.js"></script>
  <script src="/js/lib/diorama.js"></script>
  <script src="/js/lib/medium-editor.min.js"></script>
  <script src="/js/application.js"></script>
{{/contentFor}}

{{#contentFor 'breadcrumbs'}}
  <li><a href="/">Back to theme list</a></li>
{{/contentFor}}

{{#contentFor 'extra-body'}}
class="theme-page"
{{/contentFor}}

<div class="content theme">
  <article>
    <header>
      <h1>{{theme.title}}</h1>
    </header>

    <div class='main-content'>
    </div>

    <aside class="content-sidebar metadata">
     <!-- <h3>{{{t "theme/owned_by"}}}</h3> -->
    </aside>
  </article>
</div>
<div class="theme-indicators">
  <div class="inner">
    <div class="theme-block">
      <h2>Indicators under this theme</h2>

      {{#indicators}}
        <a class="indicator-box" href="/indicators/{{id}}">
          <div class="full-name">{{title}}<span>â€º</span></div>
          <div class="brief">Annual catch of major species in relation to spawning biomass if available or in relation...</div><!--{{brief}}-->
          <div class="box-header">
            <div class="title"><h3><span>O3 Human Health Ozone<!--{{small-title}}--></span></h3></div>
          </div>
          <div class="context-text concerning">Concerning <!-- {{context}} --></div>
          <div class="parameter">
            <h4><!--{{parameter}}-->53</h4>
            <div class="unit">mg/L</div>
          </div>
          <div class="last-update"><span class="status updated"><!-- {{last-update}} --></span>Up to date <!-- {{last-update}} --></div>
        </a>
      {{/indicators}}
    </div>
  </div>
</div>

<script type="text/javascript">
  i18n.onReady(function() {
    new Backbone.Controllers.ThemeController({{{ themeJSON }}});
  });
</script>
